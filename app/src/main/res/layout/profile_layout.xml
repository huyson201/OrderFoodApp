<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="50dp">

    <TextView
        android:id="@+id/txtPhone"
        android:layout_width="267dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/lblPhone"
        app:layout_constraintTop_toBottomOf="@+id/txtEmail" />

    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="267dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/lblAddress"
        app:layout_constraintTop_toBottomOf="@+id/txtPhone" />

    <TextView
        android:id="@+id/lblAddress"
        android:layout_width="73dp"
        android:layout_height="53dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="@string/lblAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblPhone" />

    <TextView
        android:id="@+id/lblPhone"
        android:layout_width="73dp"
        android:layout_height="53dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="@string/lblPhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblEmail" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="267dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/lblEmail"
        app:layout_constraintTop_toBottomOf="@+id/txtFullName" />

    <TextView
        android:id="@+id/lblEmail"
        android:layout_width="73dp"
        android:layout_height="53dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="@string/lblEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblFullName" />

    <TextView
        android:id="@+id/txtFullName"
        android:layout_width="267dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/lblFullName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblFullName"
        android:layout_width="73dp"
        android:layout_height="53dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="@string/lblFullName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="272dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:text="@string/btnEditProfile"
        android:background="@drawable/food_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAddress"
        />
</androidx.constraintlayout.widget.ConstraintLayout>